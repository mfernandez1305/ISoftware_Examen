<p id="notice"><%= notice %></p>
<div class="container">
<h1>Registros Astronomia</h1>

<table class="table">
  <thead class="thead-inverse">
    <tr>
        <th>Nombre</th>
      <th>Categoria</th>
      <th>Descripción</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @astronomia.each do |astronomium| %>
      <tr>
        <td><%= astronomium.Nombre %></td>
        <td><%= astronomium.Categoria %></td>
        <td><%= astronomium.Descripcion %></td>
        <td><%= link_to 'Ver', astronomium %></td>
        <td><%= link_to 'Editar', edit_astronomium_path(astronomium) %></td>
        <td><%= link_to 'Eliminar', astronomium, method: :delete, data: { confirmacion: 'Está seguro de eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Registro', new_astronomium_path %>
</div>
